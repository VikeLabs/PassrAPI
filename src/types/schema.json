{
  "openapi": "3.0.2",
  "info": {
    "title": "Passr API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    },
    {
      "url": "https://api.passr.ca"
    },
    {
      "url": "https://dev.api.passr.ca/"
    }
  ],
  "components": {
    "responses": {
      "DeleteSuccess": {
        "description": "Delete success"
      },
      "NotFound": {
        "description": "Not found"
      }
    },
    "schemas": {
      "UserRead": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The user's id"
          },
          "createdAt": {
            "type": "number",
            "description": "The user's creation date"
          },
          "updatedAt": {
            "type": "number",
            "description": "The user's last update date"
          }
        },
        "required": ["id", "createdAt", "updatedAt"]
      },
      "SemesterCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The semester's name"
          }
        },
        "required": ["name"]
      },
      "SemesterRead": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The semester's id"
          },
          "name": {
            "type": "string",
            "description": "The semester's name"
          },
          "createdAt": {
            "type": "number",
            "description": "The semester's creation date"
          },
          "updatedAt": {
            "type": "number",
            "description": "The semester's last update date"
          }
        },
        "required": ["id", "name", "createdAt", "updatedAt"]
      },
      "SemesterUpdate": {
        "$ref": "#/components/schemas/SemesterCreate"
      },
      "CourseCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The course's name"
          },
          "desiredGrade": {
            "type": "number",
            "description": "The course's desired grade"
          },
          "semesterId": {
            "type": "string",
            "description": "The course's semester's id"
          }
        },
        "required": ["name", "semesterId"]
      },
      "CourseRead": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The course's id"
          },
          "name": {
            "type": "string",
            "description": "The course's name"
          },
          "desiredGrade": {
            "type": "number",
            "description": "The course's desired grade"
          },
          "semesterId": {
            "type": "string",
            "description": "The course's semester's id"
          },
          "createdAt": {
            "type": "number",
            "description": "The course's creation date"
          },
          "updatedAt": {
            "type": "number",
            "description": "The course's last update date"
          }
        },
        "required": ["id", "name", "semesterId", "createdAt", "updatedAt"]
      },
      "CourseUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The course's name"
          },
          "desiredGrade": {
            "type": "number",
            "description": "The course's desired grade"
          }
        }
      },
      "CourseItemCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The course item's name"
          },
          "weight": {
            "type": "number",
            "description": "The course item's weight"
          },
          "numerator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "denominator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "dueDate": {
            "type": "number",
            "description": "The course item's due date"
          },
          "courseId": {
            "type": "string",
            "description": "The course item's course's id"
          }
        },
        "required": ["name", "courseId"]
      },
      "CourseItemRead": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The course item's id"
          },
          "name": {
            "type": "string",
            "description": "The course item's name"
          },
          "weight": {
            "type": "number",
            "description": "The course item's weight"
          },
          "numerator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "denominator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "dueDate": {
            "type": "number",
            "description": "The course item's due date"
          },
          "courseId": {
            "type": "string",
            "description": "The course item's course's id"
          },
          "createdAt": {
            "type": "number",
            "description": "The course item's creation date"
          },
          "updatedAt": {
            "type": "number",
            "description": "The course item's last update date"
          }
        },
        "required": ["id", "name", "courseId", "createdAt", "updatedAt"]
      },
      "CourseItemUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The course item's name"
          },
          "weight": {
            "type": "number",
            "description": "The course item's weight"
          },
          "numerator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "denominator": {
            "type": "number",
            "description": "The course item's grade"
          },
          "dueDate": {
            "type": "number",
            "description": "The course item's due date"
          }
        }
      }
    },
    "parameters": {
      "id": {
        "name": "id",
        "in": "path",
        "description": "The id of the resource",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/user": {
      "post": {
        "tags": ["User"],
        "summary": "Create a new user",
        "operationId": "createUser",
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserRead"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/user/{id}": {
      "parameters": [{ "$ref": "#/components/parameters/id" }],
      "get": {
        "tags": ["User"],
        "summary": "Get a user",
        "operationId": "getUser",
        "responses": {
          "200": {
            "description": "User found",
